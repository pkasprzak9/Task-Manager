<style>
  .table {
    table-layout: fixed;
    width: 100%;
  }

  .table td {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
</style>

<div class="container">
  <div class="table-responsive">
    <table class="table table-hover caption-top">
      <caption>Tasks</caption>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Due Date</th>
          <th>Status</th>
          <th>Employee ID</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="tasks">
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.due_date %></td>
            <td><%= task.status %></td>
            <td><%= task.employee_id %></td>
            <td><%= link_to "Show this task", task %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% if employee_signed_in? %>
  <%= link_to "New task", new_task_path, class:"btn btn-dark" %>
<% end %>
</div>

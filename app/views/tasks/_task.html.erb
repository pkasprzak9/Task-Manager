<style>
  .card-body{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>

<div id="<%= dom_id task %>" class='card'>
  <div class="card-body">
    <h5 class="card-title">
      <strong>Title:</strong>
      <%= task.title %>
    </h5>
    <p class="card-text">
      <strong>Description:</strong>
      <%= task.description %>
    </p>
    <p class="card-text">
      <strong>Due date:</strong>
      <%= task.due_date %>
    </p>
    <p class="card-text">
      <strong>Status:</strong>
      <%= task.status %>
    </p>
    <p class="card-text">
      <strong>Employee ID</strong>
      <%= task.employee_id %>
    </p>
  </div>

</div>
